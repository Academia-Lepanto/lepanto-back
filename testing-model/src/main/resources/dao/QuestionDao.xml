<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="question"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>question_code</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>question_code</Column>
    </UpdateKeys>
    <Queries>
        <Query id="countAptitudes">
            <ValidColumns>
                <Column>aptitude</Column>
                <Column>countQuestions</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        aptitude, count(*) as countQuestions
                    FROM
                        ${mainschema}.question
                    group by aptitude
                ]]>
            </Sentence>
        </Query>

        <Query id="countCategories">
            <ValidColumns>
                <Column>aptitude</Column>
                <Column>countQuestions</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        aptitude, category, count(*) as countQuestions
                    FROM
                        ${mainschema}.question
                    group by category
                    order by aptitude, category
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>

